@import 'common.styl'

/////////////////////////////////////////////////////////////////////////////////////////
// ME ///////////////////////////////////////////////////////////////////////////////////
/////////////////////////////////////////////////////////////////////////////////////////

section#intro
  background-color: #222
  font-size: 1.2em
  font-family: 'Lato', sans-serif

  h1
    color: #999
    font-family: 'Lato'
    font-size: 7em
    font-weight: 900
    text-transform: uppercase

.language
  .language-name
    font-family: $monospace
    font-size: 28em
    font-weight: 900
    position: absolute
    margin: 0
    z-index: 0
    opacity: .8
    transition: opacity .3s ease

    &:hover
      opacity: 1

  &.smaller
    .language-name
      font-size: 20em
    
    .language-content
      margin-top: 18em

    .language-description
      margin-left: 3em
      margin-top: -2em
      margin-bottom: 4em

  .language-content
    margin-left: 6em
    margin-top: 23em
  
  .language-description
    color: #ddd
    font-family: 'Nunito Light', $sans-serif
    font-size: 1.3em
    font-style: italic
    font-weight: bold
    margin-left: 10em
    margin-top: -1em
    margin-bottom: 4em

  *
    position: relative
    z-index: 1

  .project
    font-size: 1.1em

    h2
      text-transform: uppercase
      font-family: $monospace
      font-style: italic
      margin-bottom: 0
    
    h4
      margin-top: -.8em

section#me
  font-size: 1.2em
  text-align: center
  font-family: 'Lato', sans-serif

  h1
    font-weight: bolder

  > div
    width: 100%

  .intro
    text-align: justify
    font-size: 1.6em
    padding: 0 1em
    margin-bottom: 1em

    p
      color: #444
      font-weight: 100
  
  .skills
    padding: 0 1em

  .box
    vertical-align: top
    display: inline-block
    text-align: left
    width: 100%
    padding: 0 .7em

  h3
    text-transform: uppercase
    font-size: .9em
    font-weight: 900
    font-family: 'Nunito Black', sans-serif

  h4
    font-size: 1.8em
    margin-top: 0
    color: #555
    font-family: 'Dosis', sans-serif

    b:hover
      color: #000
      transition: color .2s ease-in-out

  ul
    padding: 0

  li
    list-style: none
    font-size: .8em
    line-height: 1.6
    color: #777

    a:hover
      color: black
      transition: color .2s ease-in-out


/////////////////////////////////////////////////////////////////////////////////////////
// PROJECTS /////////////////////////////////////////////////////////////////////////////
/////////////////////////////////////////////////////////////////////////////////////////

section#projects
  transition: background .1s ease-in-out
  background: #eee

  .project
    text-align: center
    font-family: 'Nunito Light', sans-serif
    padding: 2em
    display: inline-block
    opacity: .5
    transition: opacity .2s ease-in-out
    width: auto

    h3
      display: inline
    h2
      display: inline-block
      transition: all .1s ease-in-out
      letter-spacing: .5em
      font-size: 3em
      text-transform: uppercase
      margin: 0
      margin-left: .25em

    &:hover
      opacity: 1

      h2
        transform: translate(.05em, -.05em)
        text-shadow: rgba(0, 0, 0, .5) -.15em .15em 8px
