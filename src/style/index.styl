@import 'common.styl'

@import url('https://fonts.googleapis.com/css?family=Titillium+Web:600')

p, h1, h2, h3, h4, h5, h6
  text-align: justify
  font-weight: 400

section
  width: 100%
  margin: 0
  min-height: 30vh
  text-align: center
  display: block
  overflow: hidden

  & > *
    max-width: 1400px
    display: inline-block

/////////////////////////////////////////////////////////////////////////////////////////
// HEADER ///////////////////////////////////////////////////////////////////////////////
/////////////////////////////////////////////////////////////////////////////////////////

.opt
  opacity: 0
  transition: opacity .2s ease-out

  &.icon
    opacity: 0
  &.icon:hover
    opacity: 1!important

.me
  &:hover
    opacity: 1


section.header
  min-height: 100vh
  background: #000
  color: white
  font-family: 'Lato', $sans-serif
  display: flex
  justify-content: center
  align-items: center

  @media (max-width: 1100px)
      font-size: 1.5em

  .hero
    position: absolute
    width: 100%
    height: 100%
    z-index: 0
    overflow: hidden
    max-width: none
    max-height: none

    svg
      width: 100vmax
      height: 100vmax
      stroke: crimson
      stroke-width: .25
      stroke-dasharray: 3 1
      transform: rotate3d(1,1,1,20deg)
      transform-origin: center
      left: 0
      right: 0
      top: 0
      bottom: 0
      position: absolute
      margin-top: -30vh
      opacity: .9

  .logo
    max-width: 64px
    margin: 1.2em
    z-index: 1

  .icon
      box-sizing: content-box
      transition: transform .4s ease, opacity .4s ease
      max-width: 48px
      width: 24px
      padding: .5em
      margin: 1em .5em
      opacity: .95

      &:hover
          transform: scale(1.2)
          opacity: 1

  #top
    position: absolute
    bottom: 100vh

/////////////////////////////////////////////////////////////////////////////////////////
// ME ///////////////////////////////////////////////////////////////////////////////////
/////////////////////////////////////////////////////////////////////////////////////////

section.me
  font-size: 1.3em
  text-align: center
  font-family: 'Lato', sans-serif

  > div
    width: 100%

  .intro
    text-align: justify
    font-size: 1.6em
    padding: 0 1em

    p
      color: #444
      font-weight: 100
  
  .skills
    padding: 0 1em

  .box
    vertical-align: top
    display: inline-block
    text-align: left
    width: 100%
    padding: 0 .7em

  @media (min-width: 700px)
    .box
      width: 50%
      padding: 0 .7em

  @media (min-width: 1200px)
    .box
      width: 25%
      padding: 0 .7em

  h3
    text-transform: uppercase
    font-size: .8em
    font-weight: 800
    font-family: 'Nunito', sans-serif

  ul
    padding: 0

  li
    list-style: none
    font-size: .8em
    line-height: 1.6
    color: #777
