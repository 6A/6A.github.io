@import 'common.styl'

p, h1, h2, h3, h4, h5, h6
  text-align: justify
  font-weight: 400

section
  width: 100%
  margin: 0
  min-height: 100vh
  text-align: center
  display: block
  overflow: hidden

  & > *
    max-width: 1400px
    display: inline-block

/////////////////////////////////////////////////////////////////////////////////////////
// HEADER ///////////////////////////////////////////////////////////////////////////////
/////////////////////////////////////////////////////////////////////////////////////////

section.header
  min-height: 100vh
  background: #000
  color: white
  font-family: 'Lato', $sans-serif
  display: flex
  justify-content: center
  align-items: center

  @media (max-width: 1100px)
      font-size: 1.5em

  .hero
    position: absolute
    width: 100%
    height: 100%
    z-index: 0
    overflow: hidden
    max-width: none
    max-height: none

    svg
      width: 100vmax
      height: 100vmax
      stroke: crimson
      stroke-width: .25
      stroke-dasharray: 3 1
      transform: rotate3d(1,1,1,20deg)
      transform-origin: center
      left: 0
      right: 0
      top: 0
      bottom: 0
      position: absolute
      fill: transparent

    @media (min-height: 800px) and (min-aspect-ratio: 1)
      svg
        margin-top: -30vh

  .logo
    max-width: 64px
    margin: 1.2em
    z-index: 1
    position: relative
  
  .social
    width: 100%

    a
      display: inline-block
      vertical-align: super

  .icon
      box-sizing: content-box
      transition: transform .4s ease, opacity .4s ease
      max-width: 48px
      width: 24px
      padding: .5em
      margin: 1em .5em
      opacity: .95

      &:hover
          transform: scale(1.2)
          opacity: 1

  #arrow
    position: absolute
    bottom: 0
    transition: all .3s ease-in-out
    opacity: .8
    animation: bounce 1s ease-in-out
    cursor: pointer

    @keyframes bounce
      0%
        margin-bottom: 0
      25%
        margin-bottom: 12px
      50%
        margin-bottom: 0
      75%
        margin-bottom: 12px
      100%
        margin-bottom: 0

    &:hover
      opacity: 1
      margin-bottom: 10px

    & polyline
      fill: none
      stroke: #ddd
      stroke-width: 1px

/////////////////////////////////////////////////////////////////////////////////////////
// ME ///////////////////////////////////////////////////////////////////////////////////
/////////////////////////////////////////////////////////////////////////////////////////

section.me
  font-size: 1.3em
  text-align: center
  font-family: 'Lato', sans-serif

  h1
    font-weight: bolder

  > div
    width: 100%

  .intro
    text-align: justify
    font-size: 1.6em
    padding: 0 1em

    p
      color: #444
      font-weight: 100
  
  .skills
    padding: 0 1em

  .box
    vertical-align: top
    display: inline-block
    text-align: left
    width: 100%
    padding: 0 .7em

  @media (min-width: 700px)
    .box
      width: 50%
      padding: 0 .7em

  @media (min-width: 1200px)
    .box
      width: 25%
      padding: 0 .7em

  h3
    text-transform: uppercase
    font-size: .8em
    font-weight: 800
    font-family: 'Nunito', sans-serif

  ul
    padding: 0

  li
    list-style: none
    font-size: .8em
    line-height: 1.6
    color: #777

    a:hover
      color: black
      transition: color .2s ease-in-out
