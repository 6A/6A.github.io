@import 'common.styl'


/////////////////////////////////////////////////////////////////////////////////////////
// SECTIONS /////////////////////////////////////////////////////////////////////////////
/////////////////////////////////////////////////////////////////////////////////////////

// Accent colors

for lightdark, i in (#ef5350 #B71C1C) (#EC407A #880E4F) (#BA68C8 #4A148C) \
                    (#9575CD #311B92) (#7986CB #1A237E) (#64B5F6 #0D47A1) \
                    (#29B6F6 #01579B) (#26C6DA #006064) (#26A69A #004D40) \
                    (#66BB6A #1B5E20) (#9CCC65 #33691E) (#D4E157 #827717)
  section:nth-of-type({i + 2}), #menu li:nth-of-type({i + 2})
    --accent: lightdark[0]
  
  .dark section:nth-of-type({i + 2}), .dark #menu li:nth-of-type({i + 2})
    --accent: lightdark[1]


/////////////////////////////////////////////////////////////////////////////////////////
// INTRO ////////////////////////////////////////////////////////////////////////////////
/////////////////////////////////////////////////////////////////////////////////////////

section#intro
  theme(--background, #eee, #222)

  background: var(--background)

  font-size: 1.2em
  font-family: 'Lato', sans-serif

  .margin-top
    height: 8em

  h1
    theme(--color, #333, #888)

    color: var(--color)

    font-family: 'Lato'
    font-size: 7em
    font-weight: 900
    margin-bottom: .4em
    text-transform: uppercase

    background: linear-gradient(to right, transparent 50%, var(--color) 50%)
    background-size: 200%
    background-position: 0 0

    animation: title-appear .7s ease-out
    display: inline

    @keyframes title-appear
      0%
        background-position: 100% 0
      20%
        background-position: 100% 0
      100%
        background-position: 0 0

  &:hover
    background-position: -100% 0
  
  h4
    theme(color, #333, #999)

    font-size: 1.2em
    text-align: end
    margin-left: 40%


#menu
  theme(background, #111, #eee)
  theme(color, #eee, #111)

  min-height: 5em
  padding-bottom: 0

  .section-content
    text-align: center

  ul
    padding: 0
    display: inline-block

  li
    list-style: none
    display: inline-block
    margin: .3em .4em

  li a
    padding: .1em .2em
    font-family: $sans-serif
    font-size: 1.6em

    hoverable(var(--accent), .2s, elevate: false)


/////////////////////////////////////////////////////////////////////////////////////////
// LANGUAGES ////////////////////////////////////////////////////////////////////////////
/////////////////////////////////////////////////////////////////////////////////////////

$text-shadow-thickness = 1px

.language
  .language-name
    theme(color, #aaa, #222)
    
    font-family: $monospace
    font-size: 28em
    font-weight: 900
    position: absolute
    margin: 0
    z-index: 0
    opacity: .8
    text-shadow: var(--accent)    $text-shadow-thickness     $text-shadow-thickness, \
                 var(--accent) (- $text-shadow-thickness) (- $text-shadow-thickness)
    transition: opacity .3s ease

    &:hover
      opacity: 1

  &.smaller
    .language-name
      font-size: 20em
    
    .language-content
      margin-top: 18em

    .language-description
      margin-left: 3em
      margin-top: -2em
      margin-bottom: 4em

  .language-content
    margin-left: 6em
    margin-top: 23em
  
  .language-description
    color: var(--secondary)
    font-family: 'Nunito Light', $sans-serif
    font-size: 1.3em
    font-style: italic
    font-weight: bold
    margin-left: 10em
    margin-top: -1em
    margin-bottom: 4em

  *
    position: relative
    z-index: 1

  .project
    color: var(--secondary)

    font-size: 1.1em

    h2
      text-transform: uppercase
      font-family: $monospace
      font-style: italic
      margin-bottom: 1em
      padding: 0 .3em 0 .2em

      hoverable(var(--accent))
    
    h4
      margin-top: -.8em
    
.other-language
  display: inline-block
  font-size: 1.4em
  padding: .1em .2em

  h2
    margin: 0

  hoverable(var(--accent), .25s)
