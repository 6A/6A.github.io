@import 'jeet'
@import 'mixins'

body, html
    margin: 0
    background: linear-gradient(#06061c, #06061c, #06061c, #0d212e, #18342f)

    & > section
        center(1600px)

svg.strokes
    margin: 0
    z-index: 0
    position: absolute
    width: 100%
    height: 200%
    opacity: .7

.logo
    width: 1em
    margin-bottom: -.15em
    margin-right: .1em

.hero
    color: white
    top: 0
    left: 0
    height: 100vh

    .header
        z-index: 1
        width: auto
        margin: 50px 0 0 0

        h1
            font-size: 6em
            font-family: 'Open Sans', 'Segoe UI', sans-serif
            font-weight: lighter
            margin: 0

    .introduction
        font-family: 'Georgia', serif
        max-width: 40em
        font-size: 1.6em
        font-style: italic
        margin: 0

.me
    height: 150vh
    width: 100%

.madebyme
    height: 80vh
    width: 100%

.footer
    bottom: 0
    height: 40vh
    width: 100%
    z-index: 2
    padding: 2em 0

    & > div
        height: 100%
        background-color: rgba(0,0,0,.4)

    .links
        col(1/4)

    .contact
        col(1/4)

    .box
        col(1/2)

.notice
    width: 100%
    padding: .5em 0
    color: #fff
    background-color: rgba(0,0,0,0.4)
    text-align: center
    font-family: monospace
    margin-bottom: 2em
