doctype html

- let index = 0

mixin a(l)
  if l.startsWith('http')
    a(href=l, target='_blank', rel='noopener noreferrer')&attributes(attributes): block
  else
    a(href=l)&attributes(attributes): block

mixin arrow(target)
  .arrow-wrapper
    br
    a(href=target).arrow
      svg(style='width: 80px; height: 60px;')
        polyline(points='20,20 40,40 60,20')

