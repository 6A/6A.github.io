extends layout.pug

mixin a(l)
  a(href=l, target='_blank', rel='noopener noreferrer')&attributes(attributes): block

append head
  title Grégoire Geis - Home
  
  link(rel='stylesheet', href='/index.css')
  link(rel='stylesheet', href='https://fonts.googleapis.com/css?family=Titillium+Web|Lato|Source+Sans+Pro|Nunito|Dosis')

append scripts
  script(src='/index.js')

append body   
  - var index = 1

  mixin arrow(target)
    .arrow-wrapper
      br
      a.arrow(href=target)
        svg(style='width: 80px; height: 60px;')
          polyline(points='20,20 40,40 60,20')

  div#body(style='width:0;height:0;position:absolute;top:200vh')
  
  section#header(data-title='Header')
    .hero
      svg(viewBox='0 0 480 480', version='1.1')
        path(d='M209.505,429.511c0,0 34.918,-117.879 102.813,-213.193c-1.305,50.921 -1.623,96.232 11.433,141.278c-25.46,7.834 -99.884,47.863 -114.246,71.915Z')
        path(d='M159.714,466.23c0,0 -121.077,-83.313 -159.594,-368.603c44.207,-35.351 152.48,-66.701 268.267,-40.97c-22.849,6.528 -105.584,28.85 -163.687,70.631c-3.917,50.922 17.802,243.605 55.014,338.942Z')
        path(d='M179.499,432.451c0,0 -35.73,-134.009 -25.284,-276.98c41.781,-35.254 152.689,-107.041 293.702,-155.351c-105.76,78.993 -212.927,248.921 -268.418,432.331Z')

    mixin social(img, link, title, ext)
      +a(link)(id=img, title=title, tabindex=index++)
        img.icon&attributes(attributes)(src='/graphics/'+img+'.svg')

    .social
      +social('email',   'mailto:hello@gregoirege.is?subject=Hey,%20Greg', 'Send me an email')
      +social('github',  'https://github.com/6A',                          'Visit my GitHub profile')
      img.logo(src='/graphics/logo.svg')
      +social('medium',  'https://medium.com/@geis',                       'Visit my Medium profile')
      +social('keybase', 'https://keybase.io/71',                          'Visit my Keybase profile')

    +arrow('#me')
  

  section#me
    .intro
      h1 #[span#greeting Hey], there.
      p.
        I'm Grégoire Geis, but you can call me Greg.
        I'm a 18-year-old French student at #[a(href='http://www.epita.fr') EPITA] with a passion for computer science, and a deep interest in science in general.
        I can also speak English fluently and hold conversations in German.

    .skills
      .box
        mixin l(id)
          b: +a('https://github.com/6A?tab=repositories&language='+id): block

        h3.accent-1 Languages
        h4
          +l('csharp') CS
          |  · 
          +l('fsharp') FS
          |  · 
          +l('rust') RS
          |  · 
          +l('js') JS
          |  · 
          +l('java') JAVA
          |  · 
          +l('kotlin') KT
          |  · 
          +l('haskell') HS
          |  · 
          +l('idris') IDR
          |  · 
          +l('nim') NIM
          |  · 
          +l('c') C
          |  · 
          +l('cpp') CPP
          |  · 
          +l('d') D
          |  · 
          +l('assembly') ASM
      
      .box
        h3.accent-2 Tools
        h4.
          #[b Visual Studio Code] · 
          #[b Visual Studio] (C#, XAML) · 
          #[b Android Studio] (Kotlin) · 
          #[b Affinity Designer] · 
          #[b Unity3D] · 
          #[b Excel] · 
          #[b Cinema 4D]

      .box
        h3.accent-3 Interests
        h4.
          #[b Functional Programming] · 
          #[b Object-Oriented Programming] · 
          #[b Compiler Design] · 
          #[b Operating Systems] · 
          #[b Science] · 
          #[b Tea]

      .box
        h3.accent-4 Projects
        h4
          | I have 
          span#projects-count many
          |  
          +a('https://github.com/6A?tab=repositories') open-source projects
          | , some of them showcased below.
          br
          | However, my largest project (a dependently typed, metaprogrammed functional language that emits
          | machine code directly) has not been released yet.

    +arrow('#projects')

  section#projects
    mixin project(link, accent, title)
      +a('https://github.com/6A/'+link).project(data-accent=accent)
        h2= title || link
        br
        block
      br

    +project('LessPass', '#ffeb3b')
      h3 UWP client for LessPass.

    +project('wake', '#8bc34a')
      h3 Minimalist Android Markdown editor.

    +project('Cometary', '#009688')
      h3 Roslyn extensions, with a touch of meta-programming.

    +project('MetalSharp', '#2196f3', 'Metal#')
      h3 Type-safe F# assembler currently targeting x86 and ARM.

    +project('Ryder', '#3f51b5')
      h3 Runtime redirection of method calls for .NET Core.

    +project('Scry', '#673ab7')
      h3 Visual Studio extension that provides the ability to run C# scripts, giving them access to the current Roslyn workspace.
