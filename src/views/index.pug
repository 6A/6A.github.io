extends layout.pug

append head
  title Grégoire Geis - Home
  
  link(rel='stylesheet', href='/index.css')
  link(rel='stylesheet', href='https://fonts.googleapis.com/css?family=Titillium+Web|Lato|Source+Sans+Pro|Nunito')

append scripts
  script(src='/index.js')

append body   
  - var index = 1
  
  section.header(data-title='Header')
    .hero
      svg(viewBox='0 0 450 450', version='1.1')
        defs
          linearGradient(id='linearcolor', x1='0%', y1='0%', x2='100%', y2='100%', spreadMethod='pad')
            stop(offset='0%',   stop-color='#CB356B')
            stop(offset='100%', stop-color='#BD3F32')
      
        path(d='M209.505,429.511c0,0 34.918,-117.879 102.813,-213.193c-1.305,50.921 -1.623,96.232 11.433,141.278c-25.46,7.834 -99.884,47.863 -114.246,71.915Z')
        path(d='M159.714,466.23c0,0 -121.077,-83.313 -159.594,-368.603c44.207,-35.351 152.48,-66.701 268.267,-40.97c-22.849,6.528 -105.584,28.85 -163.687,70.631c-3.917,50.922 17.802,243.605 55.014,338.942Z')
        path(d='M179.499,432.451c0,0 -35.73,-134.009 -25.284,-276.98c41.781,-35.254 152.689,-107.041 293.702,-155.351c-105.76,78.993 -212.927,248.921 -268.418,432.331Z')

    mixin social(img, link, title, ext)
      a(id=img, href=link, target='_blank', rel='noopener noreferrer', title=title, tabindex=index++)
        img.icon&attributes(attributes)(src='/graphics/'+img+'.svg')

    +social('email',   'mailto:hello@gregoirege.is?subject=Hey,%20Greg', 'Send me an email')
    +social('github',  'https://github.com/6A',                          'Visit my GitHub profile')
    img.logo(src='/graphics/logo.svg')
    +social('medium',  'https://medium.com/@geis',                       'Visit my Medium profile')
    +social('keybase', 'https://keybase.io/71',                          'Visit my Keybase profile')

    svg#arrow(style='width: 80px; height: 60px;')
      polyline(points='20,20 40,40 60,20')
  
  section.me
    .intro
      h1 #[span#greeting Hey], there.
      p.
        I'm Grégoire Geis, but you can call me Greg.
        I'm a 18-year-old French student at #[a(href='http://www.epita.fr') EPITA] with a passion for computer science, and a deep interest in science in general.
        I can also speak English fluently and hold conversations in German.
    br
    .skills
      .box
        h3.accent-1 Known languages
        ul
          mixin l(id)
            b: a(href='https://github.com/6A?tab=repositories&language='+id, target='_blank', rel='noopener noreferrer'): block
          
          li #[+l('csharp') C#], #[+l('fsharp') F#]: Advanced
          li #[+l('rust') Rust]: Advanced
          li #[+l('js') Javascript]: Advanced
          li #[+l('java') Java], #[+l('kotlin') Kotlin]: Intermediate
          li #[+l('haskell') Haskell], #[+l('idris') Idris]: Intermediate
          li #[+l('nim') Nim]: Intermediate
          li #[+l('c') C], #[+l('cpp') C++], #[+l('d') D]: Basic
      .box
        h3.accent-2 Projects
        ul
          mixin p(id, title)
            b: a(href='https://github.com/6A/'+id, target='_blank', rel='noopener noreferrer')= title || id

          li #[+p('Ryder')]: Runtime redirection of method calls in .NET.
          li #[+p('Cometary')]: Compiler plugins in C#.
          li #[+p('LessPass')]: UWP client for #[a(href='https://lesspass.com/') LessPass].
          li #[+p('Wake')]: Android Markdown editor.
      .box
        h3.accent-3 Platforms
        ul
          li #[b Windows] (Mobile, Desktop)
          li #[b Android]
          li #[b Unix]
          li #[b IoT] (ESP8266, RPi)
      .box
        h3.accent-4 Tools
        ul
          li #[b Visual Studio Code]
          li #[b Visual Studio] (C#, XAML)
          li #[b Android Studio] (Kotlin)
          li #[b Affinity Designer]
          li #[b Unity3D]
          li #[b Excel]
          li #[b Cinema 4D]
