extends layout.pug

append head
  title Grégoire Geis
  
  link(rel='stylesheet', href='/index.css')

append scripts
  script(src='/index.js')

append body   
  section#me
    .subsection: .intro
      h1 #[span#greeting Hey], there.
      p.
        I'm Grégoire Geis, but you can call me Greg.
        I'm a 19-year-old French student at #[a(href='http://www.epita.fr').underline EPITA] with a passion for computer science, and a deep interest in science in general.

    .subsection: .skills
      .box
        mixin l(id)
          b: +a('https://github.com/71?tab=repositories&language='+id): block

        h3.accent-1 Languages
        h4
          +l('fsharp') FS
          |  · 
          +l('csharp') CS
          |  · 
          +l('python') PY
          |  · 
          +l('rust') RS
          |  · 
          +l('js') JS
          |  · 
          +l('java') JAVA
          |  · 
          +l('kotlin') KT
          |  · 
          +l('haskell') HS
          |  · 
          +l('c') C
          |  · 
          +l('cpp') CPP
          |  · 
          +l('idris') IDR
          |  · 
          +l('nim') NIM

      .box
        h3.accent-2 Tools
        h4.
          #[b NeoVim] · 
          #[b Visual Studio Code] · 
          #[b Android Studio] (Kotlin) · 
          #[b Visual Studio] (C#, XAML) · 
          #[b NixOS] · 
          #[b Affinity Designer] · 
          #[b Unity3D] · 
          #[b Excel]

      .box
        h3.accent-3 Interests
        h4.
          #[b Functional Programming] · 
          #[b Object-Oriented Programming] · 
          #[b Compiler Design] · 
          #[b Operating Systems] · 
          #[b Science] · 
          #[b Tea]

      .box
        h3.accent-4 Projects
        h4
          +a('https://github.com/71?tab=repositories')
            b.underline I have #[span#projects-count many] open-source projects
          | , some of them showcased below.
          br
          | Obviously, I also have a few top-secret projects of my own, but those
          | aren't displayed here.
          // Well except for Styx, but I'm just too proud of this one.

    +arrow('#projects')

  section#projects
    - const accents = '#e64980 #be4bdb #7950f2 #4c6ef5 #15aabf #40c057 #82c91e'.split(' ')
    - let accentIndex = 0

    mixin project(link, title)
      - const accent = accents[accentIndex++]
  
      +a('https://github.com/71/'+link).project(data-accent=accent, style='--accent: '+accent)
        h2= title || link
        br
        block
      br

    +project('Ryder')
      h3 Runtime redirection of method calls for .NET Core.

    +project('Fast.Fody')
      h3 Fody plugin that executes C# and F# scripts at compile time to modify .NET IL.

    +project('asmdot', 'ASM.')
      h3 x86 / ARM assembler in multiple languages, whose sources are generated by an easily extensible Python library.

    +project('nixcfg')
      h3 Command-line utility used to edit Nix files.

    +project('Cometary')
      h3 Roslyn extensions, with a touch of meta-programming.
    
    +project('Scry')
      h3 Visual Studio extension that provides the ability to run C# scripts, giving them access to the current Roslyn workspace.

    +project('lesspass.rs', 'LessPass')
      h3 Android, Windows and Rust clients for LessPass.

    +arrow('#header', '20,20 40,0 60,20')(style = 'margin-top: -1em')
