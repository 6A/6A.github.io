extends layout.pug

append head
  title Grégoire Geis
  
  link(rel='stylesheet', href='/index.css')

append scripts
  script(src='/index.js')


mixin section(next)
  section&attributes(attributes)
    .section-content
      block
    if next
      +arrow('#' + next)

mixin language(disp, title, id, next)
  +section(next)&attributes(attributes)(id=id, data-title=title).language
    h1.language-name
      +a('https://github.com/6A?tab=repositories&language='+id)= disp
    .language-content
      block

mixin language-description(descr)
  h3.language-description!= descr

mixin project(link, title)
  +a('https://github.com/6A/'+link).project
    h2.hoverable= title || link
    br
    block
  br

append body
  +section('menu')#intro(data-title='Header')
    .margin-top

    h1 Grégoire #[br] Geis

    h4
      +en.
        I'm Grégoire Geis, but you can call me Greg.
        I'm a 18-year-old French student at #[a(href='http://www.epita.fr') EPITA] with a passion for computer science, and a deep interest in science in general.
        I can also speak English fluently and hold conversations in German.
      +fr.
        Hello!
    
    h4#nojs-disclaimer
      script.
        document.getElementById('nojs-disclaimer').remove()
      
      | It looks like Javascript is disabled. Some optional stylistic features will be disabled.
  
  +section(null)#menu
    ul
      li: a.smooth-scroll(href='#intro') Hero
      li  · 
      each id, name in { 'C#': 'csharp', 'F#': 'fsharp', 'RS': 'rust', 'KT': 'kotlin', 'PY': 'python', 'JS': 'javascript', 'PS': 'powershell', 'NIM': 'nim' }
        li
          a.smooth-scroll(href='#'+id)= name
      li  · 
      li: a.smooth-scroll(href='#other') Other


  +language('C#', 'C#', 'csharp', 'fsharp')
    +language-description('Advanced knowledge of the language, standard library, ecosystem and compiler.')

    +project('Cometary')
      h4 Roslyn extensions, with a touch of meta-programming.

    +project('Ryder')
      h4 Runtime redirection of method calls for .NET Core.
    
    +project('Scry')
      h4 Visual Studio extension that provides the ability to run C# scripts, giving them access to the current Roslyn workspace.

    +project('LessPassForWindows', 'Less Pass')
      h4 Windows client for LessPass built with the Fluent Design system.
    

  +language('F#', 'F#', 'fsharp', 'rust')
    +language-description('Advanced knowledge of the language, standard library, ecosystem and compiler.')

    +project('styx-history', 'Styx')
      h4 Styx to .NET compiler prototype, with dependent types.
    
    +project('Fast.Fody')
      h4 Fody plugin that executes C# and F# scripts at compile time to modify .NET IL.


  +language('RS', 'Rust', 'rust', 'kotlin')
    +language-description('Advanced knowledge of the language, standard library and ecosystem.')

    +project('nixcfg')
      h4 Command-line utility used to edit Nix files.

    +project('lesspass.rs')
      h4 Efficient implementation of the LessPass generator.
    
    +project('styx-history', 'Styx')
      h4


  +language('KT', 'Kotlin', 'kotlin', 'python')
    +language-description('Advanced knowledge of the language, and moderate knowledge of the standard library.')

    +project('lesspass.kt', 'Less Pass')
      h4 Android client for LessPass in Material Design.

    +project('Wake')
      h4 Minimal Markdown editor for Android.


  +language('PY', 'Python', 'python', 'javascript')
    +language-description('Advanced knowledge of the language, and moderate knowledge of the standard library.')

    +project('asmdot', 'ASM.')
      h4 x86 / ARM / Mips assembler in multiple languages, whose sources are generated by an easily extensible Python library.


  +language('JS', 'JavaScript', 'javascript', 'powershell').smaller
    +language-description('Advanced knowledge of the language, and up-to-date with most of the ecosystem.')

    +project('Keystone.nim')
      h4 Nim bindings to the Keystone library.

  +language('PS', 'PowerShell', 'powershell', 'nim').smaller
    +language-description('Advanced knowledge of the language, standard library and ecosystem.')

    +project('PSScripts', 'Scripts')
      h4 Collection of personal PowerShell scripts.

  +language('NIM', 'Nim', 'nim', 'other').smaller
    +language-description('Advanced knowledge of the language, standard library and ecosystem.')

    +project('Keystone.nim')
      h4 Nim bindings to the Keystone library.


  +section(null)#other(data-title='Other').language.smaller
    h1.language-name
      +en Other
      +fr Autre
    
    .language-content
      mixin l(id, title)
        +a('https://github.com/6A?tab=repositories&language='+id).other-language
          h2.hoverable= title

      h3.language-description
        +l('java', 'JAVA')
        |  · 
        +l('haskell', 'HS')
        |  · 
        +l('idris', 'IDR')
        |  · 
        +l('c', 'C')
        |  · 
        +l('cpp', 'C++')
        |  · 
        +l('d', 'D')
        |  · 
        +l('assembly', 'ASM')

  // section#me
    .subsection: .intro
      h1 #[span#greeting Hey], there.


    .subsection: .skills
      .box
        mixin l(id)
          b: +a('https://github.com/6A?tab=repositories&language='+id): block

        h3.accent-1 Languages
        h4
          +l('nim') NIM
          |  · 
          +l('fsharp') FS
          |  · 
          +l('csharp') CS
          |  · 
          +l('python') PY
          |  · 
          +l('rust') RS
          |  · 
          +l('js') JS
          |  · 
          +l('java') JAVA
          |  · 
          +l('kotlin') KT
          |  · 
          +l('haskell') HS
          |  · 
          +l('idris') IDR
          |  · 
          +l('c') C
          |  · 
          +l('cpp') CPP
          |  · 
          +l('d') D
          |  · 
          +l('assembly') ASM
      
      .box
        h3.accent-2 Tools
        h4.
          #[b Visual Studio Code] · 
          #[b Visual Studio] (C#, XAML) · 
          #[b Android Studio] (Kotlin) · 
          #[b Affinity Designer] · 
          #[b Unity3D] · 
          #[b Excel] · 
          #[b Cinema 4D]

      .box
        h3.accent-3 Interests
        h4.
          #[b Functional Programming] · 
          #[b Object-Oriented Programming] · 
          #[b Compiler Design] · 
          #[b Operating Systems] · 
          #[b Science] · 
          #[b Tea]

      .box
        h3.accent-4 Projects
        h4
          +a('https://github.com/6A?tab=repositories')
            b I have #[span#projects-count many] open-source projects
          | , some of them showcased below.
          br
          | Obviously, I also have a few top-secret projects of my own, but those
          | aren't displayed here.
          // Well except for Styx, but I'm just too proud of this one.

    +arrow('#projects')

  // section#projects
    mixin project(link, accent, title)
      +a('https://github.com/6A/'+link).project(data-accent=accent)
        h2= title || link
        br
        block
      br

    +project('styx-history', '#d4dae0', 'Styx')
      h3 Dependently-typed, meta-programmed functional language with built-in JIT.

    +project('asmdot', '#2196f3', 'ASM.')
      h3 x86 / ARM assembler in multiple languages, whose sources are generated by an easily extensible Python library.


    +project('wake', '#8bc34a')
      h3 Minimalist Android Markdown editor.

    +arrow('#header', '20,20 40,0 60,20')(style = 'margin-top: -1em')
